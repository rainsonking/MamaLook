<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kehuhuaPage.activity.StuMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_gray" />
        <!--底层按钮-->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio1"
                style="@style/activity2_stu_footer_radio"
                android:checked="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/stu_foot_forth_selector"
                android:text="首页" />

            <RadioButton
                android:id="@+id/radio2"
                style="@style/activity2_stu_footer_radio"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/stu_foot_six_selector"
                android:text="学习" />
            <RadioButton
                android:id="@+id/radio3"
                style="@style/activity2_stu_footer_radio"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/stu_foot_second_selector"
                android:text="洛信" />
            <RadioButton
                android:id="@+id/radio4"
                style="@style/activity2_stu_footer_radio"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/stu_foot_third_selector"
                android:text="我" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>
