<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <kehuhuaPage.widgts.CnToolbar
        android:id="@+id/stu_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/red">

    </kehuhuaPage.widgts.CnToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/light_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="118sp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <!--<com.kwsoft.kehuhua.view.HeadPictureImageView-->
            <!--android:id="@+id/stu_head_image"-->
            <!--android:layout_width="84dp"-->
            <!--android:layout_height="84dp"-->
            <!--android:background="@drawable/ic_bg" />-->
            <!--<com.facebook.drawee.view.SimpleDraweeView-->
                <!--android:id="@+id/stu_head_image"-->
                <!--android:layout_width="84dp"-->
                <!--android:layout_height="84dp"-->
                <!--fresco:failureImage="@mipmap/ic_launcher"-->
                <!--fresco:pressedStateOverlayImage="@color/gray"-->
                <!--fresco:progressBarAutoRotateInterval="5000"-->
                <!--fresco:progressBarImage="@mipmap/ic_launcher"-->
                <!--fresco:roundBottomLeft="true"-->
                <!--fresco:roundBottomRight="true"-->
                <!--fresco:roundTopLeft="true"-->
                <!--fresco:roundTopRight="true"-->
                <!--fresco:roundedCornerRadius="12dp" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="84sp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/stu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14sp"
                    android:layout_marginTop="7dp"
                    android:text="李小明"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/stu_phone_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stu_name"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_phone" />

                    <TextView
                        android:id="@+id/stu_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="18899993333"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stu_phone_line"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_phone" />

                    <TextView
                        android:id="@+id/stu_school_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:ellipsize="end"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/light_gray" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/light_gray" />

                <!--个人资料-->
                <LinearLayout
                    android:id="@+id/stu_info_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <ImageView
                            android:id="@+id/stu_info_image"
                            android:layout_width="23dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_information" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12sp"
                            android:layout_toRightOf="@+id/stu_info_image"
                            android:text="个人信息"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10sp"
                            android:src="@mipmap/often_into" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/bg_normal" />


                </LinearLayout>

                <!--修改密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/stu_account_info"
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <ImageView
                            android:id="@+id/stu_account_info_image"
                            android:layout_width="23dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_information" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12sp"
                            android:layout_toRightOf="@+id/stu_account_info_image"
                            android:text="账户信息"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10sp"
                            android:src="@mipmap/often_into" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/bg_normal" />


                </LinearLayout>

                <!--修改密码-->
                <LinearLayout
                    android:id="@+id/ll_stu_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <ImageView
                            android:id="@+id/stu_suggest_image"
                            android:layout_width="23dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_information" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12sp"
                            android:layout_toRightOf="@+id/stu_suggest_image"
                            android:text="我的团队"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10sp"
                            android:src="@mipmap/often_into" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/bg_normal" />


                </LinearLayout>

                <!--修改密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/stu_resetPwd"
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <ImageView
                            android:id="@+id/stu_passWord_image"
                            android:layout_width="23dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_information" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12sp"
                            android:layout_toRightOf="@+id/stu_passWord_image"
                            android:text="修改密码"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10sp"
                            android:src="@mipmap/often_into" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/bg_normal" />
                </LinearLayout>


                <!--查询当前版本-->
                <LinearLayout
                    android:id="@+id/ll_stu_version_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <ImageView
                            android:id="@+id/stu_version_image"
                            android:layout_width="23dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_information" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12sp"
                            android:layout_toRightOf="@+id/stu_version_image"
                            android:text="当前版本"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/stu_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10sp"
                            android:text="V.1.2"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/bg_normal" />

                </LinearLayout>
                <!--清除缓存-->
                <LinearLayout
                    android:id="@+id/ll_stu_clear_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <ImageView
                            android:id="@+id/stu_clear_cache"
                            android:layout_width="23dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_information" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12sp"
                            android:layout_toRightOf="@+id/stu_clear_cache"
                            android:text="清除缓存"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_clean_cache"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10sp"
                            android:text="0M"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/bg_normal" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/stu_log_out"
                android:layout_width="match_parent"
                android:layout_height="41sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="25dp"
                android:background="@drawable/me_btn_logout_bg"
                android:gravity="center"
                android:text="退出登陆"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>