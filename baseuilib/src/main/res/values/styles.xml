<resources>


    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="base_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="dark_divider" parent="base_divider">
        <item name="android:background">@color/dark_gray_divider</item>
    </style>

    <style name="base_divider_top_10" parent="base_divider">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="base_divider_top_20" parent="base_divider">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="base_divider_top_30" parent="base_divider">
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="dark_divider_top_10" parent="dark_divider">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="timeline_bold_divider_10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/timeline_background</item>
    </style>

</resources>
